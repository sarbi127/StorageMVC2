@{
    ViewData["Title"] = "DropDown";
}

<h1>DropDown</h1>

<form asp-controller="Products" asp-action="DropDown" method="get">

    <input type="text" placeholder="Search here..." autofocus class="form-control" name="category" />
    <input type="submit" class="btn btn-primary" />

</form>

