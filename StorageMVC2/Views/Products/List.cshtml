@model ProductViewModel


 <h1>Total Value</h1>

<h2>@Model.InventoryValue</h2>

<h1>Product List</h1>

@foreach (var pro in Model.product)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <div class="caption">
                <h3>
                    <a>@pro.Name</a>
                </h3>
                <h4 class="pull-right">@pro.Price.ToString("c")</h4>
                <p>@pro.Count</p>
            </div>
        </div>
    </div>

}

